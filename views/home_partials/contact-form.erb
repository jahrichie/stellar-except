<div class="contact-form">
<form action="" method="post" id="bigjoe">
  <input type="text" name="name" class="form" placeholder="Your Name">
  <input type="text" name="email" class="form" placeholder="Your Email">
  <textarea rows="4" class="form" cols="50" placeholder="Your Message"></textarea>
    <% if  params[:order].present? %>
       <script type="text/javascript">   
           $(window).bind("load", function() {
              $('a.simulateclick').trigger('click');
          });
      </script>
      <input type="checkbox" name="orderval"  <%= params[:order] == "postcards"  ? 'checked' : 'checked' %> value="postcards">Send me postcards<br>

      <input type="checkbox" name="orderval" value="stickers" <%= params[:order] == "stickers"  ? 'checked' : 'checked' %>> Send me stickers<br>
    <% end %>

   <input type="submit" class="btn btn-large greensubmit">

  </form>
</div><!-- contact-form -->

<div class="contact-info">
  <span class="header">Holler at Us</span>
  <span><i class="icon-envelope"></i> <a href="#">info@exceptfarmworkers.com</a></span>
  <span> <i class="icon-phone"></i> 800.000.0000</span>
</div><!-- contact-info -->

 
